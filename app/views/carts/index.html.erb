<div class="container">
<div class="row">
  <div class="col-md-12">

    <h2> Cart </h2>
  <div class="pull-right">
    <button> <%= link_to("Delete all", clean_carts_path, method: :delete, data: { confirm: "Are you sure?"}) %> </button>
  </div>

  <br><br>
    <table class="table table-bordered">
      <thead>
          <tr>
              <th colspan="2"> Product detail </th>
              <th> Price </th>
              <th> Quantity</th>
              <th> Option </th>
          </tr>
      </thead>
      <tbody>
        <!-- product column -->
        <% current_cart.cart_items.each do |cart_item| %>
          <tr>
              <td>
                  <%= link_to product_path(cart_item.product) do %>
                    <% if cart_item.product.image.present? %>
                      <%= image_tag(cart_item.product.image.thumb.url, class: "thumbnal") %>
                    <% else %>
                      <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                    <% end %>
                  <% end %>
              </td>
              <td>
                <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
              </td>
              <td>
                <%= cart_item.product.price %>
              </td>
              <td>
                <%= form_for cart_item, url: cart_item_path(cart_item.product_id) do |f|  %>
                  <%= f.select :quantity, 1..cart_item.product.quantity %>
                  <%= f.submit "Update", data: { disable_with: "Submiting...." }, class: "btn btn-xs btn-success" %>
                <% end %>
              </td>
              <td>
                 <%= link_to("Delete", cart_item_path(cart_item.product_id), method: :delete, data: { confirm: "Are you sure? "}, class: "btn btn-xs btn-danger") %>
              </td>
          </tr>
        <% end %>
        <!-- product column end -->
      </tbody>
    </table>

    <br>

    <div class="total clearfix">
      <span class="pull-right">
        <span>
        Total   <%= render_cart_total_price(current_cart) %>
        </span>
      </span>
    </div>

     <hr>

    <div class="checkout clearfix">
      <%= link_to("Confirm", checkout_carts_path, method: :post, class: "btn btn-lg btn-danger pull-right") %>
    </div>
  </div>
</div>

</div>
